root = true

## 适用全部文件
[*]
### 设置字符集
charset = utf-8
### 缩进风格 space | tab，建议 space
indent_style = space
### 缩进的空格数
indent_size = 2
### 换行符类型 lf | cr | crlf，一般都是设置为 lf
end_of_line = lf
### 是否在文件末尾插入空白行
insert_final_newline = true
### 是否删除一行中的前后空格
trim_trailing_whitespace = true

## 适用 .md 文件
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
